@model CategoryViewModel

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "_Layout";
}

<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <!--begin::Header-->
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Kategoriler
                    </h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Trigger Modal-->
                    <a href="#" class="btn btn-success font-weight-bolder font-size-sm" aria-haspopup="true" aria-expanded="false" data-toggle="modal" data-target="#exampleModalCustomScrollable">Kategori Ekle</a>
                    <!--end::Trigger Modal-->
                    <!--begin::Modal Content-->
                    <div class="modal fade" id="exampleModalCustomScrollable" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Kategori Ekle</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <i aria-hidden="true" class="ki ki-close"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div id="categoryForm" data-scroll="true">
                                        <form asp-controller="Category" asp-action="Add" method="post" class="form pt-9">
                                            <div class="form-group row">
                                                <label class="col-xl-2 col-lg-2 text-right col-form-label">Ad</label>
                                                <div class="col-lg-11 col-xl-7">
                                                    <input asp-for="AddCategoryDto.Name" name="cName" class="form-control form-control-lg form-control-solid" type="text"/>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">İptal</button>
                                    <button id="category_submit" type="submit" class="btn btn-primary font-weight-bold">Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Modal Content-->
                </div>
            </div>
            <!--end::Header-->
            <div class="card-body">
                <!--begin: Datatable-->
                <div class="datatable datatable-bordered datatable-head-custom datatable-default datatable-primary datatable-loaded" id="kt_datatable" style="">
                    <table class="datatable-table" style="display: block;">
                        <thead class="datatable-head">
                        <tr class="datatable-row" style="left: 0px;">
                            <th data-field="Name" class="datatable-cell datatable-cell-sort">
                                <span style="width: 137px;">Ad</span>
                            </th>
                            <th data-field="Actions" data-autohide-disabled="false" class="datatable-cell datatable-cell-sort">
                                <span style="width: 125px;">İŞLEMLER</span>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="datatable-body" style="">
                        @foreach(var category in @Model.Categories)
                        {
                            <tr data-row="@category.Id" class="datatable-row" style="left: 0px;">
                                <td data-field="Name" aria-label="Brazil" class="datatable-cell">
                                    <span style="width: 137px;">@category.Name</span>
                                </td>
                                <td data-field="Actions" data-autohide-disabled="false" aria-label="null" class="datatable-cell">
                                    <div style="overflow: visible; position: relative; width: 125px;">
                                        <a href="#" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon mr-2" title="Edit" aria-haspopup="true" aria-expanded="false" data-toggle="modal" data-target="#updateModel">
                                            <span class="svg-icon svg-icon-md">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="0" y="0" width="24" height="24"></rect> <path d="M12.2674799,18.2323597 L12.0084872,5.45852451 C12.0004303,5.06114792 12.1504154,4.6768183 12.4255037,4.38993949 L15.0030167,1.70195304 L17.5910752,4.40093695 C17.8599071,4.6812911 18.0095067,5.05499603 18.0083938,5.44341307 L17.9718262,18.2062508 C17.9694575,19.0329966 17.2985816,19.701953 16.4718324,19.701953 L13.7671717,19.701953 C12.9505952,19.701953 12.2840328,19.0487684 12.2674799,18.2323597 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.701953, 10.701953) rotate(-135.000000) translate(-14.701953, -10.701953) "></path> <path d="M12.9,2 C13.4522847,2 13.9,2.44771525 13.9,3 C13.9,3.55228475 13.4522847,4 12.9,4 L6,4 C4.8954305,4 4,4.8954305 4,6 L4,18 C4,19.1045695 4.8954305,20 6,20 L18,20 C19.1045695,20 20,19.1045695 20,18 L20,13 C20,12.4477153 20.4477153,12 21,12 C21.5522847,12 22,12.4477153 22,13 L22,18 C22,20.209139 20.209139,22 18,22 L6,22 C3.790861,22 2,20.209139 2,18 L2,6 C2,3.790861 3.790861,2 6,2 L12.9,2 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                                                    </g>
                                                </svg>
                                            </span>
                                        </a>
                                        <!--begin::Modal Content-->
                                        <div class="modal fade" id="updateModel" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="updateModelLabel">Kategori Güncelle</h5>
                                                        <button id="close_update_modal" type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <i aria-hidden="true" class="ki ki-close"></i>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div id="categoryUpdateForm" data-scroll="true">
                                                            <form asp-controller="Category" asp-action="Update" method="post" class="form pt-9">
                                                                <div class="form-group row">
                                                                    <label class="col-xl-2 col-lg-2 text-right col-form-label">Ad</label>
                                                                    <div class="col-lg-11 col-xl-7">
                                                                        <input asp-for="CategoryUpdateDto.Name" name="cUpdateName" class="form-control form-control-lg form-control-solid" type="text" value=@category.Name/>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">İptal</button>
                                                        <button id="category_update_submit" data-id="@category.Id" type="submit" class="btn btn-primary font-weight-bold">Güncelle</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--end::Modal Content-->
                                        <a class="btn btn-sm btn-clean btn-icon" type="button" data-id="@category.Id" id="category_delete" title="Delete">
                                            <span class="svg-icon svg-icon-md">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="0" y="0" width="24" height="24"></rect>
                                                        <path d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z" fill="#000000" fill-rule="nonzero"></path>
                                                        <path d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z" fill="#000000" opacity="0.3"></path>
                                                    </g>
                                                </svg>
                                            </span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Entry-->
<script src="~/js/pages/Category/category.js"></script>