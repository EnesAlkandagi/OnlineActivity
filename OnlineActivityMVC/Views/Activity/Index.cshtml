                                <div class="progress-bar bg-success" role="progressbar" style="width: @Model.Activity.SolidityRatio%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <span class="font-weight-bolder text-dark">%@Model.Activity.SolidityRatio</span>
